<div class="media">
  <div class="media-left">
    <a href="#">
      <ul class="message"><%= image_tag(current_user.image.url(:medium))%></ul>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <%= conversation.originator.first_name %> <br>
      <small><b>Subject: </b><%= conversation.subject %></small><br>
      <small><b>Sent at: </b><%= time_ago_in_words(conversation.messages.last.created_at)%> ago</small>
    </h4>
    <%= truncate conversation.messages.last.body, length: 145 %>
    <%= link_to "View", conversation_path(conversation)  %>
  </div>
</div>

